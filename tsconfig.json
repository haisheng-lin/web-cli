{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2015", "dom"],
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "baseUrl": "./src",
    "paths": {
      "@commands/*": ["commands/*"],
      "@configs": ["configs/index"],
      "@constants": ["constants/index"],
      "@context": ["context/index"],
      "@defaults/*": ["defaults/*"],
      "@definitions": ["definitions/index"],
      "@paths": ["paths/index"],
      "@tools/*": ["tools/*"],
      "@utils": ["utils/index"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
